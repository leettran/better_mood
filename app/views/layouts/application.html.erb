  <body>

    <div id="wrapper">                
      <!-- Page content -->
      <div id="page-content-wrapper">
        <header>
          <%= render 'layouts/navigation' %>
        </header>
        
        <div class="content-header">
          <h1>
            <a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
            
            <%= yield(:title) %>
          </h1>
        </div>


        <!-- Keep all page content within the page-content inset div! -->
        <div class="page-content inset">
          <div class="row">
            <div class="col-md-12">
              <!-- Main App Content -->
              <main role="main">
                 <%= render 'layouts/messages' %>
                 <%= yield %>
              </main>

          </div>
        </div>
      </div>
      
    </div>
        


    <!-- Custom JavaScript for the Menu Toggle -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("active");
    });
    </script>
    

  <!-- Segment.io Identify User-->  
  <% if current_user %>
    <script type="text/javascript">
      // this info is parsed by Segment.io and sent off to the appropriate analytics providers
      // TODO: Add these if we begin collecting user names
        // name             : <%# raw current_user.username.to_s.to_json %>,
        // username         : <%# raw current_user.username.to_s.to_json %>,
      analytics.identify(<%= raw current_user.id.to_s.to_json %>, {
        email            : <%= raw current_user.email.to_s.to_json %>,
        created          : "<%= raw current_user.created_at %>"
      });
    </script>
  <% end %>
  </body>
</html>




